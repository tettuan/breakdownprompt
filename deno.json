{
  "name": "@tettuan/breakdownprompt",
  "version": "0.1.1",
  "exports": "./src/mod.ts",
  "tasks": {
    "test": "LOG_LEVEL=debug deno test --allow-read --allow-write --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "publish": "deno publish"
  },
  "imports": {
    "@std/": "jsr:@std/"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom", "esnext"],
    "strict": true
  },
  "fmt": {
    "files": {
      "include": ["src/", "tests/"]
    },
    "options": {
      "lineWidth": 100,
      "indentWidth": 2
    }
  },
  "publish": {
    "include": ["src/", "README.md", "LICENSE"],
    "exclude": ["tests/", "docs/", ".git/", ".cursor/"]
  }
} 