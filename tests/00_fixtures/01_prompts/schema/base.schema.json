{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "input_markdown_file": {
      "type": "string",
      "description": "Path to the input markdown file"
    },
    "schema_file": {
      "type": "string",
      "description": "Path to the schema file"
    },
    "output_dir": {
      "type": "string",
      "description": "Directory where output will be written"
    }
  },
  "required": ["input_markdown_file", "schema_file", "output_dir"],
  "additionalProperties": false
}
